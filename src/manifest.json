{
  "background": {
    "scripts": ["./background.js"]
  },
  "browser_action": {
    "default_popup": "./popup.html",
    "default_title": "THBWiki",
    "default_icon": "assets/icons/logo_128.png"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": ["./contentScripts.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end"
    }
  ],
  "description": "vue-chrome-extension-boilerplate",
  "icons": {
    "128": "assets/icons/logo_128.png"
  },
  "manifest_version": 2,
  "name": "vue-chrome-extension-boilerplate",
  "options_ui": {
    "chrome_style": false,
    "page": "./options.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "background",
    "storage",
    "tabs",
    "webRequest"
  ],
  "version": "1.0.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
